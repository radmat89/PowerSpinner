<resources>

  <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorControlHighlight">@color/white_87</item>
    <item name="android:colorBackground">@color/background</item>
    <item name="android:textColor">@color/white_93</item>
    <item name="android:textColorPrimary">@color/md_amber_700</item>
    <item name="powerSpinnerDefaultItemStyle">@style/powerSpinnerDefaultItemStyle</item>
  </style>

  <style name="powerSpinnerDefaultItemStyle" parent="Widget.MaterialComponents.TextView">
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:maxEms">20</item>
    <item name="android:maxLines">1</item>
    <item name="android:textSize">12sp</item>
  </style>

</resources>
